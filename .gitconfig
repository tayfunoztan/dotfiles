[user]
	name = Tayfun Oztan
	email = tayfn.oztan@gmail.com

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[core]
	editor = vim
	excludesFile = /Users/toztan/.gitignore_global

[merge]
	tool = vimdiff

[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
