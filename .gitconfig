[color]
  branch      = auto
  diff        = auto
  interactive = auto
  status      = auto
  ui          = auto

[push]
	default = current

[pull]
	rebase = true

[rebase]
	autoStash = true

[commit]
  gpgsign = false

[core]
	editor = vim
	excludesFile = /Users/tayfunoztan/.gitignore_global

[diff]
	tool = vimdiff

[merge]
	tool = vimdiff

[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
