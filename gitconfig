[user]
	name = Tayfun Oztan
	email = tayfunn.oztann@gmail.com

[color]
  branch      = auto
  diff        = auto
  interactive = auto
  status      = auto
  ui          = auto

[push]
	default = current

[pull]
	rebase = true

[rebase]
	autoStash = true

[commit]
  gpgsign = false

[core]
	editor = nvim
	excludesfile = /Users/tayfunoztan/.gitignore_global
	pager = delta

[alias]
	logg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --decorate --date=short

[delta]
	line-numbers = true
        syntax-theme = gruvbox-dark
        side-by-side = false

[diff]
	tool = vimdiff

[merge]
	tool = vimdiff

[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
